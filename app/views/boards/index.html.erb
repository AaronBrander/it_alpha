<h1>Listing boards</h1>

<table>
  <thead>
    <tr>
      <th>Subdomain</th>
      <th>Name</th>
      <th>Description</th>
      <th>Keywords</th>
      <th>Company name</th>
      <th>Address 1</th>
      <th>Address 2</th>
      <th>City</th>
      <th>Region</th>
      <th>Postal code</th>
      <th>Country</th>
      <th>Phone number</th>
      <th>Contact email</th>
      <th>State</th>
      <th>Is private</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.subdomain %></td>
        <td><%= board.name %></td>
        <td><%= board.description %></td>
        <td><%= board.keywords %></td>
        <td><%= board.company_name %></td>
        <td><%= board.address_1 %></td>
        <td><%= board.address_2 %></td>
        <td><%= board.city %></td>
        <td><%= board.region %></td>
        <td><%= board.postal_code %></td>
        <td><%= board.country %></td>
        <td><%= board.phone_number %></td>
        <td><%= board.contact_email %></td>
        <td><%= board.state %></td>
        <td><%= board.is_private %></td>
        <td><%= link_to 'Show', board %></td>
        <td><%= link_to 'Edit', edit_board_path(board) %></td>
        <td><%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

