<%= provide(:title, full_name(@user)) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= full_name(@user) %>
      </h1>
    </section>
  </aside>
  <div class="span8">
  	<h2>Boards</h2>
  	<% if @user.boards.any? %>
  		<h3><%= pluralize(@user.boards.count, "board") %> owned</h3>
  		<ul class="board-list">
  			<% @user.boards.each do |board| %>
  				<li><%= board.name %></li>
  			<% end %>
  		</ul>
  	<% end %>
  </div>	
</div>



